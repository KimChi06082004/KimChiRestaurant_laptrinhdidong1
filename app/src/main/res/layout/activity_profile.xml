<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2D4F2B">

    <!-- Phần nền xanh -->
    <LinearLayout
        android:orientation="vertical"
        android:background="#D3ECCD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarProfile"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#D3ECCD"
            android:title="Trang cá nhân"
            android:titleTextColor="#000000"/>

        <!-- Avatar + Tên người dùng -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgAvatar"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_person"
                android:background="@android:color/white"
                android:padding="8dp"
                android:layout_marginEnd="12dp"
                android:contentDescription="Avatar"/>

            <TextView
                android:id="@+id/tvUsername"
                android:text="Tên người dùng"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Danh sách chức năng -->
    <ListView
        android:id="@+id/listOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="#CCCCCC"
        android:dividerHeight="1dp"/>

    <!-- Nút Đăng nhập / Đăng xuất -->
    <Button
        android:id="@+id/btnLoginLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đăng ký / Đăng nhập"
        android:backgroundTint="@color/teal_700"
        android:textColor="@android:color/white"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"/>


    <!-- Nút Xóa tài khoản dạng viền khung -->
    <TextView
        android:id="@+id/tvDeleteAccountStyled"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Xóa tài khoản"
        android:textColor="#000000"
        android:gravity="center"
        android:padding="12dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/border_box"
        android:layout_margin="16dp"/>
</LinearLayout>
