<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="24dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#103331"
    android:layout_marginTop="24dp">


    <!-- Logo (trái) -->
    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_logo"
        android:scaleType="fitCenter"
        android:layout_marginEnd="12dp"
        android:contentDescription="Logo Kim Chi Restaurant" />



    <!-- Đoạn giới thiệu (sát chân logo) -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Nhà hàng chúng tôi luôn đặt khách hàng lên hàng đầu, tận tâm phục vụ, mang lại trải nghiệm tuyệt vời nhất. Các món ăn với công thức độc quyền sẽ mang lại hương vị mới mẻ cho thực khách.\nKim Chi Restaurant xin chân thành cảm ơn."
        android:textColor="#FFFFFF"
        android:textSize="14sp" />

    <!-- Địa chỉ và liên hệ -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cửa hàng chính"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Địa chỉ: 70 Lữ Gia, phường 15, quận 11, TP.HCM"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:layout_marginTop="4dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Điện thoại: 1900 6750"
        android:textColor="#FBC02D"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email: support@sapo.vn"
        android:textColor="#FF8A65"
        android:textSize="14sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hệ thống cửa hàng"
        android:layout_marginTop="12dp"
        android:background="@drawable/button_orange"
        android:textColor="#FFFFFF" />

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="#CCCCCC" />

    <!-- Mạng xã hội -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MẠNG XÃ HỘI"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginTop="12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="24dp">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_zalo"
            android:layout_marginEnd="12dp"
            android:scaleType="centerCrop" />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_facebook"
            android:layout_marginEnd="12dp"
            android:scaleType="centerCrop" />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_youtube"
            android:scaleType="centerCrop" />
    </LinearLayout>
</LinearLayout>
