<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2D4F2B">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarDetail"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#708A58"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:title="Chi tiết món ăn"
        android:titleTextColor="#FFFFFF" />

    <!-- Thanh tìm kiếm + giỏ hàng + chat -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="#3E5942"
        android:padding="6dp"
        android:gravity="center_vertical">

        <!-- Ô tìm kiếm -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="#444"
            android:gravity="center_vertical"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_marginEnd="4dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@android:drawable/ic_menu_search"
                android:tint="#999999" />

            <EditText
                android:id="@+id/searchInput"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Freeship 0Đ mọi đơn*"
                android:background="@android:color/transparent"
                android:textColor="#000"
                android:textSize="14sp"
                android:inputType="text"
                android:paddingStart="6dp" />

            <ImageView
                android:id="@+id/btnCamera"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@android:drawable/ic_menu_camera"
                android:tint="#999999"
                android:layout_marginStart="6dp" />
        </LinearLayout>

        <!-- Giỏ hàng -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp">

            <ImageView
                android:id="@+id/iconCart"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_cart" />

            <TextView
                android:id="@+id/badgeCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:background="@drawable/badge_background"
                android:textSize="10sp"
                android:padding="2dp"
                android:minWidth="16dp"
                android:gravity="center"
                android:layout_gravity="top|end"
                android:visibility="gone" />
        </FrameLayout>

        <!-- Chat -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_notify" />

            <TextView
                android:id="@+id/badgeNotify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/badge_background"
                android:text="99+"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:padding="2dp"
                android:minWidth="16dp"
                android:gravity="center"
                android:layout_gravity="top|end" />
        </FrameLayout>
    </LinearLayout>

    <!-- Nội dung chi tiết -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/imgDetailFood"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:layout_marginBottom="16dp"
                android:background="#FFFFFF" />

            <TextView
                android:id="@+id/txtDetailName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtDetailPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#F44336"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/txtOriginalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#BDBDBD" />

            <!-- Spinner Size -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chọn size:"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_marginEnd="8dp" />

                <Spinner
                    android:id="@+id/spinnerSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#FFFFFF" />
            </LinearLayout>

            <!-- Spinner Topping -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Topping:"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_marginEnd="8dp" />

                <Spinner
                    android:id="@+id/spinnerTopping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#FFFFFF" />
            </LinearLayout>

            <!-- Số lượng -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_quantity_box"
                android:padding="4dp">

                <Button
                    android:id="@+id/btnMinus"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:text="-"
                    android:textSize="22sp"
                    android:backgroundTint="#EEEEEE"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/txtQuantity"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:gravity="center"
                    android:text="1"
                    android:textSize="18sp"
                    android:textColor="#000"
                    android:background="#FFFFFF"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp" />

                <Button
                    android:id="@+id/btnPlus"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:text="+"
                    android:textSize="22sp"
                    android:backgroundTint="#EEEEEE"
                    android:textColor="#000" />
            </LinearLayout>

            <!-- Nút Thêm và Đặt bàn -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp">

                <Button
                    android:id="@+id/btnAddToCart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="THÊM VÀO GIỎ HÀNG"
                    android:backgroundTint="#FFC107"
                    android:textColor="#000" />

                <Button
                    android:id="@+id/btnBookNow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ĐẶT BÀN TẠI ĐÂY"
                    android:layout_marginStart="8dp"
                    android:backgroundTint="#F44336"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtDetailDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textStyle="italic"
                android:textSize="15sp"
                android:layout_marginTop="12dp" />

            <TextView
                android:id="@+id/txtIngredients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtPortion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtCookingTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

        </LinearLayout>
    </ScrollView>
    <include
        layout="@layout/footer" />
</LinearLayout>
